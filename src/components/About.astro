---
import { Icon } from "astro-icon/components";
import MediaLinks from "./MediaLinks.astro";
import img from "../assets/img/1.png";
import { Image } from "astro:assets";
---

<div class="about" data-about>
  <Icon name="mdi:close-octagon" data-cancel class="cancel" />
  <div class="content">
    <div class="profile">
      <h3>ğ•¶ğ–ğ–—ğ–†ğ–“ ğ•²ğ–šğ–•ğ–™ğ–†</h3>
      <div class="circle">
        <Image src={img} alt="profile" />
      </div>
    </div>

    <table>
      <tr>
        <th>Nationality: </th><td>Indian</td>
      </tr>
      <tr>
        <th>Gender: </th><td>Female</td>
      </tr>
      <tr>
        <th>Born: </th><td>5 March 1995</td>
      </tr>
      <tr>
        <th>Email: </th><td>Kirangupta835@gmail.com</td>
      </tr>
      <tr>
        <!-- <th>Age: </th><td>{calculateAge("1995-03-5")}</td> -->
      </tr>
    </table>
  </div>
  <div class="social-media-links">
    <MediaLinks />
  </div>
</div>

<style>
  .about {
    text-align: left;
    z-index: 2001;
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    width: min(300px, 70%);
    background-color: white;
    transform: translateX(100%);
    transition: transform 0.2s ease-in-out;
    padding-block: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: black;
    gap: 0.2rem;
    overflow-y: auto;
    font-size: 0.9rem;
  }
  .profile {
    align-self: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    margin-top: 4rem;
  }
  .profile h3 {
    font-size: 1.8em;
  }
  .circle {
    height: 6rem;
    width: 6rem;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid gray;
  }
  .circle img {
    height: 100%;
    width: 100%;
  }
  table {
    font-size: 0.8rem;
    margin-top: 2rem;
    text-align: center;
  }

  td {
    padding-block: 0.15rem;
    padding-inline: 0.3rem;
  }
  .btn {
    padding: 0.5rem 0.8rem;
    margin-top: 0.5rem;
    border: none;
    cursor: pointer;
    transition: 0.2s ease-in-out;
    background-color: #2c3e50;
    color: white;
  }
  .btn:hover {
    transform: translateY(-5px);
    background-color: #2c3e50;
  }
  .cancel {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: red;
    font-size: 1.5rem;
    cursor: pointer;
  }
  .social-media-links {
    margin-top: auto;
  }
</style>
